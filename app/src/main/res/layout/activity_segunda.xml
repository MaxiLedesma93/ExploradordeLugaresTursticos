<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lugares.SegundaActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="382dp"
        android:layout_height="110dp"
        android:layout_marginTop="52dp"
        android:background="#4371FD"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textColorHint="#090909"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv1"
        android:layout_width="179dp"
        android:layout_height="155dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imv2"
        android:layout_width="169dp"
        android:layout_height="153dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imv1"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imv3"
        android:layout_width="158dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv1"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvHorarios"
        android:layout_width="181dp"
        android:layout_height="104dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imv3"
        app:layout_constraintTop_toBottomOf="@+id/imv2" />

</androidx.constraintlayout.widget.ConstraintLayout>